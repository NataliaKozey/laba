# Module: system

- module: system
  period: 10s
  metricsets:
    - cpu
    - load
    - memory
    - network
    - process
    - process_summary
    - socket_summary
    - entropy
    - core
    - diskio
    - socket
    - service
    - users

  process.include_top_n:
    by_cpu: 5
    by_memory: 5



- module: system
  period: 1m
  metricsets:
    - filesystem
    - fsstat
  processors:
    - drop_event.when.regexp:
        system. filesystem.mount_point: '^/(sys|cgroup|proc|dev|etc|host|Lib|snap) ($|/)'

- module: system
  period: 15m
  metricsets:
    - uptime
